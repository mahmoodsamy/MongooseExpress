<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Product</title>
</head>
<body>
    <h1>Edit Product</h1>

    <!-- editing old product -->
    <!-- method override : method = put -->
    <form action="/products/<%= product._id %>?_method=PUT" method="POST">
        <label for="name">Product Name</label>
        <!-- product name -->
        <input type="text" name="name" id="name" placeholder="product name" value="<%= product.name %> ">
        <label for="price">Price (Unit)</label>
        <!-- product price -->
        <input type="number" id="price" name="price" placeholder="price" value="<%= product.price %>">
        <label for="category">Select Category</label>
        
        <select name="category" id="category">
            <!-- to choose one option from categories -->
            <% for(let category of categories){ %>
                <!-- if product.category = category then.. selected it at first option -->
                <option value="<%=category%>" <%= product.category === category ? 'selected': '' %> ><%=category%></option>
                <% } %>
        </select>
        <button>Submit</button>
    </form>
<!-- back to id products page -->
        <a href="/products/<%=product._id%>">Cansel</a>

</body>
</html>
